@page
@model CarShop.Pages.CarModel;
@{
    ViewData["Title"] = "Thank you";
}

<h1>You can also try to start a race with any of our cars!</h1>


<div class="text-center">
    <div class="container">
        <div class="row">
                @foreach (var car in Model.fakeCarDB)
                {
                    var imagePath = "~/images/Cars/" + (car.ImageTitle + ".jpg");

                    <div class="col-4 mb-5 offset-1">

                        <h4 style="font-size:2rem" class="offset-2 mt-5">@car.CarName</h4>
                    <a class="car-img" asp-area="" asp-page="/Race"  asp-route-CarName="@car.CarName"><img src="@imagePath" class=" w-100 mainImage" asp-append-version="true" /></a>
                    <br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


